

 <h1>Task Name:  </h1>
    <%= @add_link = '<a href="' + "../../#{@task.id}" + '">' + "#{@task.title}" + '</a>' %>
    :: <%= @task.complete ? "Complete" : "Incomplete" %>
 <h1> Subtask Name:  </h1>
 <%= @subtask.title %>
     :: <%= @subtask.complete ? "Complete" : "Incomplete" %>

 <div>
   <h2>Subtask Description: </h2>
    <p> Estimated Duration: <%= @subtask.estimated_duration %></p>
    <p> Deadline: <%= @subtask.priority %></p>
    <p> Notes: <%= @subtask.notes %></p>
    <p>The following user(s) is/are assigned to this task:</p>
      <ul>
         <% @subtask.users.each do |user| %>
           <li><%= user.username %></li>
        <% end%>
      </ul>

 </div>

 <div>
   <% can_edit = 0 %>
   <% @subtask.users.each do |user| %>
       <% if session[:user_id] == user.id %>
         <% can_edit = 1 %>
       <% end %>
    <% end%>

    <% if can_edit == 1 %>
      <%= @form_open = '<form style="display:inline;" action="' + "../../#{@task.id}/subtasks/#{@subtask.id}/edit" + '">' %><button type="submit">Edit Subtask</button></form>
      <%= @form_open = '<form style="display:inline;" action="' + "../../#{@task.id}/subtasks/#{@subtask.id}/delete"  + '" method="POST"' + '>' %>
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete Subtask">
      </form>
    <% end %>
 </div>

<br><br>
 <div>
  <a href="../../../user/userhome">User Home</a> | <%= @add_link = '<a href="' + "../../../user/#{@user.id}" + '">' + "My Profile" + '</a>' %> | <a href="../../../user/logout">Log Out</a>
 </div>
