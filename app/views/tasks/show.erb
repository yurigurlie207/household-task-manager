<h1>Task Name:  </h1>
<%= @task.title %>


<% if @task.no_subtask == true %>
<div>
  <h1>Task Description: </h1>
   <p> This task has <b>no subtasks</b> </p>
   <p> Estimated Duration: <%= @task.estimated_duration %></p>
   <p> Deadline: <%= @task.priority %></p>
   <p> Notes: <%= @task.notes %></p>
   <p>The following user(s) is/are assigned to this task:</p>
     <ul>
        <% @subtask.users.each do |user| %>
          <li><%= user.username %></li>
       <% end%>
     </ul>
</div>

<% else %>
  <h3>Add or Delete Subtasks here: </h3>
  <% Subtask.where(task_id: @task.id).each do |subtask| %>
    <a href = "/subtask/#{subtask.id}"><%= subtask.title %><br>
   <% end %>
  <a href="/subtask/new">Add Subtasks</a>

<% end %>
